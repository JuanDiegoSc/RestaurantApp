@using Restaurant.Web.Models.EmployeeModels
@model List<AdminSolicitudVacacionesViewModel>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Solicitudes de Vacaciones</h1>
        <p class="lead">Gestiona las solicitudes de vacaciones de los empleados.</p>
        <hr class="my-4">
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Empleado</th>
                <th>Fecha Solicitud</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var solicitud in Model)
            {
                <tr>
                    <td>@solicitud.Id</td>
                    <td>@solicitud.EmpleadoId</td>
                    <td>@solicitud.FechaSolicitud.ToString("yyyy-MM-dd")</td>
                    <td>@solicitud.FechaInicio.ToString("yyyy-MM-dd")</td>
                    <td>@solicitud.FechaFin.ToString("yyyy-MM-dd")</td>
                    <td>@solicitud.Estado</td>
                    <td>
                        <form method="post" action="@Url.Action("CambiarEstadoSolicitud", "Admin")">
                            <input type="hidden" name="id" value="@solicitud.Id" />
                            <button name="estado" value="Aprobado" class="btn btn-success btn-sm">Aprobar</button>
                            <button name="estado" value="Rechazado" class="btn btn-danger btn-sm">Rechazar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
