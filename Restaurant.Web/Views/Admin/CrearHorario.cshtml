@using Restaurant.Web.Models.EmployeeModels
@model CrearHorarioViewModel

<div class="container mt-4">
    <h1 class="mb-4">Asignar Horario a un Empleado</h1>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }

    <form method="post" asp-action="CrearHorario" asp-controller="Admin">
        <div class="mb-3">
            <label for="EmpleadoId" class="form-label">Empleado ID</label>
            <input type="number" class="form-control" id="EmpleadoId" name="EmpleadoId" value="@Model.EmpleadoId" readonly />
        </div>
        <div class="mb-3">
            <label for="FechaInicio" class="form-label">Fecha de Inicio</label>
            <input type="datetime-local" class="form-control" id="FechaInicio" name="FechaInicio" required />
        </div>
        <div class="mb-3">
            <label for="FechaFin" class="form-label">Fecha de Fin</label>
            <input type="datetime-local" class="form-control" id="FechaFin" name="FechaFin" required />
        </div>
        <div class="mb-3">
            <label for="DiaSemana" class="form-label">Día de la Semana</label>
            <input type="text" class="form-control" id="DiaSemana" name="DiaSemana" required />
        </div>
        <div class="mb-3">
            <label for="Horas" class="form-label">Horas (Ej: 08:00-16:00)</label>
            <input type="text" class="form-control" id="Horas" name="Horas" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar Horario</button>
    </form>
</div>
