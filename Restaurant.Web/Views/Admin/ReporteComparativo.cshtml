@using Restaurant.Web.Models.EmployeeModels
@model List<AdminReporteComparativoViewModel>

<div class="container mt-4">
    <h1 class="mb-4">Reporte Comparativo</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID Horario</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Horas Asignadas</th>
                <th>Formulario Llenado</th>
                <th>Fecha del Formulario</th>
                <th>Empleado</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var reporte in Model)
                {
                    <tr>
                        <td>@reporte.HorarioId</td>
                        <td>@reporte.FechaInicioHorario.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@reporte.FechaFinHorario.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@reporte.HorasAsignadas</td>
                        <td>
                            @if (reporte.LlenoFormulario)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td>@(reporte.FechaFormulario.HasValue ? reporte.FechaFormulario.Value.ToString("yyyy-MM-dd HH:mm") : "N/A")</td>
                        <td>
                            <strong>@reporte.NombreEmpleado</strong> <br />
                            <small>@reporte.UsuarioEmpleado</small>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No hay datos para mostrar en el reporte.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">Volver al Panel de Administración</a>
    </div>
</div>
